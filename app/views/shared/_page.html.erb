                    </div>
                </div>
            </nav>
            <div class='flex flex-col gap-6'>
                <%= render 'shared/cardsinfo', info:'VALOR ATUAL:', value:'R$ 547,00', show_icon: true %>
                <%= render 'shared/cardsinfo', info:'VALOR DEPOSITADO:', value:'R$ 547,00', show_icon: false %>
                <%= render 'shared/cardsinfo', info:'VALOR RETIRADO:', value:'R$ 547,00', show_icon: false %>
                <%= render 'shared/cardsinfo', info:'TAXA SELIC a.a:', value:"#{@selic}%", show_icon: false %>
            </div>
            <button class='bg-[#DA1B6E] transition duration-500 hover:brightness-125 font-semibold py-[0.8rem] rounded-lg px-0'>
                DEPOSITAR
            </button>
        </aside>
        <div class='w-[70vw] min-h-screen h-fit px-2 flex flex-col'>
            <%= render 'shared/header' %>
            <div class='h-[90vh]'>
                <%= yield %>
            <div>
        </div>
</div>
